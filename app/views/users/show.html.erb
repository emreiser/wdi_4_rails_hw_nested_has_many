<h1>Browse <%= @user.name %>'s Articles</h1>
<h3><%= link_to "Back to Users", users_path %></h3>

<dl>
<% @user.articles.each do |article| %>
	<dt><%= link_to article.title, user_article_path(@user, article) %></dt>
		<dd><%= truncate(article.body, length: 200) %></dd>
<% end %>

<h3><%= link_to "Submit new Article", new_user_article_path(@user.id) %></h3>

</dl>